<h1>Stories</h1>

<div class="row">
  <div class="span12">
    <p class="pull-right"><%= link_to 'New Story', new_story_path, class: 'btn btn-primary' %></p>
  </div>
</div>

<div id="stories">
  <h2>In Progress</h2>
  <div id="in-progress">
    <% @in_progress_stories.each do |story| %>
      <div class="well" id="story-<%= story.id %>">
        <%= story.title %> - <%= story.points %>
        -
        <%= link_to 'Edit', edit_story_path(story) %>
      </div>
    <% end %>
  </div>

  <h2>Backlog</h2>
  <div id="backlog">
    <% @backlog_stories.each do |story| %>
      <div class="well" id="story-<%= story.id %>">
        <%= story.title %> - <%= story.points %>
        -
        <%= link_to 'Edit', edit_story_path(story) %>
      </div>
    <% end %>
  </div>

  <h2>Completed</h2>
  <div id="completed">
    <% @completed_stories.each do |story| %>
      <div class="well" id="story-<%= story.id %>">
        <%= story.title %> - <%= story.points %>
        -
        <%= link_to 'Edit', edit_story_path(story) %>
      </div>
    <% end %>
  </div>
</div>
